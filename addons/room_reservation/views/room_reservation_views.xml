<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_room_reservation_tree" model="ir.ui.view">
            <field name="name">room.reservation.tree</field>
            <field name="model">room.reservation</field>
            <field name="arch" type="xml">
                <tree string="Ruangan" default_order="number">
                    <field name="number"/>
                    <field name="room_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_room_reservation_form" model="ir.ui.view">
            <field name="name">room.reservation.form</field>
            <field name="model">room.reservation</field>
            <field name="arch" type="xml">
                <form string="Ruangan">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button type="object" name="action_process" string="Proses Pemesanan" attrs="{'invisible': [('state', '=', 'done')]}" class="oe_highlight oe_read_only"/>
                    </header>
                    <sheet>
                        <group>
                            <div colspan="2" class="oe_title oe_read_only">
                                <h1>
                                    <field name="number" readonly="1"/>
                                </h1>
                            </div>
                            <group>
                                <field name="room_id" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="notes" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_room_reservation" model="ir.actions.act_window">
            <field name="name">Room Reservation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">room.reservation</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Buat Pemesanan Ruangan
                </p>
            </field>
        </record>

        <menuitem name="Pemesanan Ruangan" id="menu_room_reservation" action="action_room_reservation" parent="menu_room_root" sequence="2"/>
    </data>
</odoo>